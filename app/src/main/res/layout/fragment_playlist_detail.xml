<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlists_details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".groovy.details.PlaylistDetailFragment">

    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/design_default_color_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Hard Rock Cafe" />

    <TextView
        android:id="@+id/playlist_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rock your senses with this timeless signature vibe list." />
</LinearLayout>