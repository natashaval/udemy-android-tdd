<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.natashaval.udemyandroidtdd">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GroovyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UdemyAndroidTdd"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".cicd.CicdActivity"
            android:exported="false" />
        <activity
            android:name=".groovy.GroovyActivity"
            android:exported="true"
            android:label="@string/playlist_screen_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".coroutines.PracticeActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>